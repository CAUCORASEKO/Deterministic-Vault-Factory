{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Deterministic Vault",
  "version": "0.1.0",
  "identifier": "com.deterministicvault.desktop",

  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },

  "app": {
    "windows": [
      {
        "title": "Deterministic Vault",
        "width": 1280,
        "height": 820,
        "resizable": true,
        "fullscreen": false
      }
    ],

    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}
